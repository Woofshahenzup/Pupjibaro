#!/bin/sh
#control center by josejp2424 2014
# 19042014 i18n, l10n spanish nilsonmorales

export TEXTDOMAIN=control_center_Pupjibaro
export OUTPUT_CHARSET=UTF-8
B_OK="GTK_STOCK_OK"

Xdialog --title "$(gettext 'Control Center Pupjibaro')" --screen-center \--icon '/usr/local/lib/X11/pixmaps/configuration48.png' \ --left --menubox "$(gettext 'Control Center Pupjibaro\n(Select a item and click Ok)')" 320x280 10 \
 '1' "Gparted" \
 '2' "Grub4dos" \
 '3' "$(gettext 'Puppy Universal Instaler')" \
 '4' "$(gettext 'Puppy Packages Manager')" \
 '5' "$(gettext 'Setup Puppy')" \
 '6' "$(gettext '1st Run Setup')" \
 '7' "$(gettext 'Wallapers setter')" \
 '8' "$(gettext 'Icons switcher')" \
 '9' "$(gettext 'GTK change theme')" \
 '10' "$(gettext 'Openbox configuration')" \
2>/tmp/control_jibaro.tmp

r=`tail -n 1 /tmp/control_jibaro.tmp`

if [ "$r" == "1" ];then
   gparted_shell & control_center_jibaro
   exit ## Exit Script ##
fi

if [ "$r" == "2" ];then
   grub4dosconfig & control_center_jibaro
   exit ## Exit Script ##
fi

if [ "$r" == "3" ];then
   /usr/sbin/puppyinstaller & control_center_jibaro
   exit ## Exit Script ##
fi

if [ "$r" == "4" ];then
   ppm & control_center_jibaro
   exit ## Exit Script ##
fi

if [ "$r" == "5" ];then
   wizardwizard & control_center_jibaro 
   exit ## Exit Script ##
fi

if [ "$r" == "6" ];then
   quicksetup & control_center_jibaro
   exit ## Exit Script ##
fi

if [ "$r" == "7" ];then
   wallpaper & control_center_jibaro
   exit ## Exit Script ##
fi

if [ "$r" == "8" ];then
   icon_switcher & control_center_jibaro
   exit ## Exit Script ##
fi

if [ "$r" == "9" ];then
   gtk_chtheme_wrapper & control_center_jibaro
   exit ## Exit Script ##
fi
if [ "$r" == "10" ];then
   obconf & control_center_jibaro
   exit ## Exit Script ##
fi

exit # END SCRIPT #
