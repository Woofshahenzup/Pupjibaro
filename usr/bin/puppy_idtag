#!/bin/bash
# puppy_idtag v.0.1 by nilsonmorales
# i18n, i10n nilsonmorales 08062014
# usage: edit ~/.bashrc and add this line at the end 
# /usr/bin/puppy_idtag
# you can comment the logo that you dont like or create a new.

export TEXTDOMAIN=puppy_idtag
export OUTPUT_CHARSET=UTF-8
name=`uname -s`
arch=`uname -m`
hostname=`hostname`
#OS=`uname -o`
OS=`source /etc/DISTRO_SPECS && echo "$DISTRO_NAME"`
user=`whoami`
ver=`uname -r`
shell=`echo $SHELL`
cpu=$(awk -F':' '/model name/{ print $2 }' /proc/cpuinfo | head -n 1 | tr -s " " | sed 's/^ //');
uptime=`uptime`
Memory=`free -m | awk 'NR==2{printf "%s/%sMB (%.2f%)\n", $3,$2,$3*100/$2 }'`
wm=`wmctrl -m | grep "Name:" | awk '{print $2}'`

# Change color output variables

var1=`echo -e "\e[1;34m$name\e[0m"`
var2=`echo -e "\e[1;34m$arch\e[0m"`
var3=`echo -e "\e[1;34m$OS\e[0m"`
var4=`echo -e "\e[1;34m$ver\e[0m"`
var5=`echo -e "\e[1;31m$hostname\e[0m"`
var6=`echo -e "\e[1;36m$user\e[0m"`
var7=`echo -e "\e[1;34m$shell\e[0m"`
var8=`echo -e "\e[1;34m$cpu\e[0m"`
var9=`echo -e "\e[1;34m$uptime\e[0m"`
var10=`echo -e "\e[1;34m$Memory\e[0m"`
var11=`echo -e "\e[1;34m$wm\e[0m"`

### LINUX LOGO

echo -e ""
echo -e "\e[1;31m         _sudZUZ#Z#XZo=_         \e[1;37m\e[0m""\e[1;31m$(tput setaf 4)╔═╗╦ ╦╔═╗╦╦╔╗ ╔═╗╦═╗╔═╗  ╦ ╦╦ ╦╔═╗╔═╗╔═╗╦ ╦$(tput sgr 0)   \e[1;37m\e[0m"
echo -e "\e[1;31m      _jmZZ2!!~---~!!X##wa       \e[1;37m\e[0m""\e[1;31m$(tput setaf 4)╠═╝║ ║╠═╝║║╠╩╗╠═╣╠╦╝║ ║  ║║║╠═╣║╣ ║╣ ╔═╝╚╦╝$(tput sgr 0)   \e[1;37m\e[0m"
echo -e "\e[1;31m   .<wdP~~            -!YZL,     \e[1;37m\e[0m""\e[1;31m$(tput setaf 4)╩  ╚═╝╩ ╚╝╩╚═╝╩ ╩╩╚═╚═╝  ╚╩╝╩ ╩╚═╝╚═╝╚═╝ ╩$(tput sgr 0)   \e[1;37m\e[0m" 
echo -e "\e[1;31m  .mX2'       _%aaa__     XZ[.   \e[1;37m\e[0m"
echo -e "\e[1;31m  oZ[      _jdXY!~?S#wa   ]Xb;   \e[1;37m\e[0m"
echo -e "\e[1;31m _#e'     .]X2(     ~Xw|  )XXc \e[0m""\e[1;33mSistema : $var3\e[0m"
echo -e "\e[1;31m.2Z'      ]X[.       xY|  ]oZ( \e[0m""\e[1;33mKernel  : $var1\e[0m"  "\e[1;33mVersion : $var4\e[0m"  
echo -e "\e[1;31m.2#;      )3k;     _s!~   jXf' \e[0m""\e[1;33mUsuario : $var6@$var5\e[0m"   
echo -e "\e[1;31m 1Z>      -]Xb/    ~    __#2(  \e[0m""\e[1;33mArq.    : $var2\e[0m"  
echo -e "\e[1;31m -Zo;       +!4ZwaaaauZZXY'    \e[0m""\e[1;33mShell   : $var7\e[0m"   
echo -e "\e[1;31m  *#[,        ~-?!!!!!!-~      \e[0m""\e[1;33mCPU     : $var8\e[0m" 
echo -e "\e[1;31m   XUb;.                       \e[0m""\e[1;33m$(gettext 'Window Manager:') $var11\e[0m"
echo -e "\e[1;31m    )YXL,,                     \e[0m""\e[1;33m$(gettext 'Memory:') $var10\e[0m"
echo -e "\e[1;31m      +3#bc,                   \e[0m"
echo -e "\e[1;31m        -)SSL,,                \e[0m"
echo -e "\e[1;31m           ~~~~~ \e[0m"
echo -e ""